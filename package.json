{
    "name": "vscode-auto-scroll",
    "displayName": "Auto Scroll",
    "description": "auto scroll to the end of file",
    "version": "1.0.3",
    "publisher": "pejmannikram",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/PejmanNik/vscode-autoScroll.git"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "keywords": [
        "Log",
        "Log File",
        "Scroll",
        "Auto Scroll",
        "End of file"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:log",
        "onCommand:autoScroll.enable"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "autoScroll.toggle",
                "title": "Toggle Auto Scroll",
                "category": "Auto Scroll"
            },
            {
                "command": "autoScroll.enable",
                "title": "Enable Auto Scroll",
                "category": "Auto Scroll"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "AutoScroll",
            "properties": {
                "autoscroll.keepLastLineInCenter": {
                    "type": "boolean",
                    "default": true,
                    "description": "Keep last line in center of view."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^3.4.1",
        "vscode": "^1.1.33",
        "@types/node": "^11.13.0",
        "@types/mocha": "^5.2.6"
    }
}